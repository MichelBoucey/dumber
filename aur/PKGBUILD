
# Maintainer: Michel Boucey <michel dot boucey at gmail dot com>
# Contributor: Michel Boucey <michel dot boucey at gmail dot com>

pkgname=dumber
pkgver=3.0.0.1
pkgrel=1
pkgdesc='(un)numbering Mardown section and add/remove tables of content'
arch=('x86_64')
url="https://github.com/MichelBoucey/$pkgname"
license=('BSD-3-Clause')
makedepends=('go')
source=("$url/archive/refs/tags/v$pkgver.tar.gz")
sha256sums=('0897302e375b659a7a1457f3cfdc150f218e9a565d4dc9fd9b57bb34ba3d0e0a')

prepare(){
  cd "$pkgname-$pkgver"
}

build() {
  cd "$pkgname-$pkgver"
  make build
}

check() {
  cd "$pkgname-$pkgver"
  make test
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm755 $pkgname "$pkgdir"/usr/local/bin/$pkgname
}

